@model IEnumerable<Order>

@{
    ViewData["Title"] = "Orders";
    string[] months = new string[] {
    "January", "February", "March", "April", "May", "June",
    "July", "August", "September", "October", "November", "December"};
}

@if (TempData["Message"] != null)
{
    <div class="d-flex justify-content-center" id="disappearingAlert">
        <div class="alert alert-dismissible" role="alert">
            @TempData["Message"]
            <button type="button" class="ms-3 p-0 btn-close" style="position: inherit;padding: 0;align-self: center;"
                    data-bs-dismiss="alert" aria-label="Close">
            </button>
        </div>
    </div>
}

<div class="d-flex justify-content-between">
    <h4 class="ms-3 mb-0" style="align-content: end;display: flex;flex-wrap: wrap;">Orders</h4>
    <a href="#" style="align-content: end;display: flex;flex-wrap: wrap;text-decoration-line:underline;">View history</a>
</div>

<div class="mt-2 mb-4">
    @foreach (var order in Model)
    {
        <div class="bg-white p-3 pb-1 mb-2 shadow">
            <div class="d-flex justify-content-between align-content-center py-2">
                @{
                    DateTime date = order.isProcessed ? order.ProcessedDate : order.PlacedDate.AddDays(3);
                }
                <h5>@(order.isProcessed ? "Delivered " : "Delivered by ") @date.ToString("ddd, dd MMMM yyyy")</h5>
                <a class="btn px-2 py-1" style="background-color:#f3f3f3; border: 1px solid grey;border-radius:0;">Order Details</a>
            </div>
            <hr />
            <div class="d-flex m-2">
                @{
                    int i = 0;
                }
                @foreach (var product in order.Products.Take(5))
                {
                    if (i != 4)
                    {
                        <a class="me-2" style="position:relative; border: 1px solid grey;width:100px;height:100px;">
                            <img src="~/images/dundermifflin.png" style="width:100%;height:100%;" />
                        </a>

                    }
                    else
                    {
                        <a class="me-2" href="#" style="position:relative;border: 1px solid grey;width:100px;height:100px;">
                            <img src="~/images/dundermifflin.png" style="width:100%;height:100%;opacity:0.5;" />
                            <i class="fa-solid fa-plus" style="position:absolute; top:40%; right:40%"></i>
                        </a>
                    }
                    i++;
                }
            </div>
        </div>
    }
</div>

